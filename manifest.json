{
  "manifest_version": 2,
  "name": "RpgEx",
  "version": "1.0",
  "description": "cool stuff man.",
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "https://*.roblox.com/*"
    // Add 
  ],
  "content_scripts": [
    {
      "matches": ["https://www.roblox.com/*"],
      "js": ["contentScript.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Your Extension Title"
  },
  "icons": {
    "128": "icon.png"
  },
  "web_accessible_resources": [
    "icon.png"
  ],
  "options_page": "options.html"
}
